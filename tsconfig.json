{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "jsx": "react-jsx",
        "strict": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "target": "ES2020",
        "checkJs": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
    },
    "include": ["./src/**/*", "./app/**/*"],
    "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"]
}       